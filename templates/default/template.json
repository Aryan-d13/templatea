{
  "name": "default",
  "canvas": { 
    "width": 1080, 
    "height": 1920 
  },
  "background": {
    "type": "color",
    "value": "#000000"
  },
  "video": {
    "width_pct": 100,
    "vertical_align": "center"
  },
  "text": {
    "font": "assets/Anton.ttf",
    "font_size": 120,
    "min_font_size": 40,
    "max_lines": 2,
    "line_width_pct": 90,
    "position_relative_to_video": { 
      "gap_px": 20 
    },
    "color": "#ffffff",
    "align": "center",
    "highlight": {
      "enabled": true,
      "mode": "manual",
      "manual_words": [
        "Samsung",
        "AI-powered",
        "arriving"
      ],
      "highlight_count": 3,
      "default_highlight_color": "#ffde59"
    }
  },
  "logo": {
    "enabled": true,
    "path": "assets/marketingspots_logo.png",
    "size": { 
      "width": 200
    },
    "position": "top-right",
    "margin": 36
  },
  "render": {
    "audio_merge": true,
    "ffmpeg_params": "-c:v libx264 -crf 18 -preset veryfast"
  }
}