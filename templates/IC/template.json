{
  "id": "IC",
  "name": "IC",
  "canvas": {
    "width": 1080,
    "height": 1920
  },
  "background": {
    "type": "image",
    "value": "assets/background.png"
  },
  "video": {
    "width_pct": 75,
    "position": {
      "y": 960
    },
    "rounded_radius": 50
