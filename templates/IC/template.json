    "align": "center",
    "gap_px": 200,
    "highlight": {
      "enabled": false,
      "type": "color_word",
      "mode": "ai",
      "highlight_count": 1,
      "manual_words": [
        "incredible",
        "amazing"
      ],
      "color": "#00ff00"
    }
  },
  "header": {
    "enabled": false,
    "path": "assets/header.png",
    "width": 600,
    "gap_px": 25
  },
  "logo": {
    "enabled": true,
    "path": "assets/logo.png",
    "size": {
      "width": 200
    },
    "position_mode": "canvas",
    "position": "top-left",
    "margin": 20
    },
  "renderer": {
    "module": "templates.IC",
    "entrypoint": "render"
  }
